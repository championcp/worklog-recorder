{
  "name": "nobody-logger",
  "version": "1.0.0",
  "description": "日志记录软件 - 完整的工作日志管理系统，包含前端React应用和后端Node.js API",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "build": "npm run client:build && npm run server:build",
    "start": "npm run server:start",
    "server:dev": "cd server && npm run dev",
    "server:build": "cd server && npm run build",
    "server:start": "cd server && npm start",
    "client:dev": "cd client && npm start",
    "client:build": "cd client && npm run build",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "clean": "rm -rf node_modules server/node_modules client/node_modules server/dist client/build",
    "lint": "cd server && npm run lint && cd ../client && npm run lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "jest api_tests.js",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "lighthouse http://localhost:3000 --output=html --output-path=./reports/lighthouse-report.html",
    "test:security": "npm audit && snyk test",
    "test:all": "npm run test:api && npm run test:e2e && npm run test:performance",
    "test:server": "cd server && npm test",
    "test:client": "cd client && npm test",
    "test:management": "cd test/test-management-system && npx http-server . -p 8000 -c-1 --cors -o",
    "test:management:install": "cd test/test-management-system && npm install http-server",
    "report": "jest --coverage && npm run test:performance"
  },
  "keywords": [
    "work-log",
    "time-tracking", 
    "task-management",
    "planning",
    "productivity",
    "react",
    "nodejs",
    "typescript",
    "express",
    "sqlite"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "cypress": "^13.6.0",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "lighthouse": "^11.4.0",
    "snyk": "^1.1266.0",
    "http-server": "^14.1.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/task-management-system.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/nobody-logger/issues"
  },
  "homepage": "https://github.com/yourusername/nobody-logger#readme",
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["<rootDir>/test/setup.js"],
    "collectCoverageFrom": [
      "server/src/**/*.js",
      "client/src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "<rootDir>/test/**/*.test.js",
      "<rootDir>/test/**/*.spec.js"
    ],
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "cypress": {
    "baseUrl": "http://localhost:3000",
    "viewportWidth": 1280,
    "viewportHeight": 720,
    "video": true,
    "screenshotOnRunFailure": true,
    "defaultCommandTimeout": 10000,
    "requestTimeout": 10000,
    "responseTimeout": 10000
  }
}